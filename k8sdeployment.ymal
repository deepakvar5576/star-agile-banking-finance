---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: banking-all
spec:
  replicas: 1
  selector:
    matchLabels:
      app: banking-all
  template:
    metadata:
      labels:
        app: banking-all
    spec:
      containers:
        - name: bankingnet
          image: deepakvarshney5576/banking-project:1.0
          ports:
            - containerPort: 8081
          env:
            - name: PORT
              value: "8081"
---
apiVersion: v1
kind: Service
metadata:
  name: banking-all
spec:
  type: NodePort
  ports:
    - port: 8081
      targetPort: 8081
  selector:
    app: banking-all
